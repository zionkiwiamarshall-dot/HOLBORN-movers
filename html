  <script>
    // Basic form "mailto" fallback with small validation and UX
    function submitContact(e){
      e.preventDefault();
      const name = document.getElementById('name').value.trim();
      const email = document.getElementById('email').value.trim();
      const phone = document.getElementById('phone').value.trim();
      const message = document.getElementById('message').value.trim();
      if(!name || !email || !message){
        showStatus('Please fill required fields.', true);
        return false;
      }

      // prepare mailto
      const subject = encodeURIComponent('Moving Inquiry from ' + name);
      const body = encodeURIComponent(
        'Name: ' + name + '\\n' +
        'Email: ' + email + '\\n' +
        'Phone: ' + phone + '\\n\\n' +
        'Message:\\n' + message
      );

      // open mail client - falls back to same-window mailto
      const mailTo = 'mailto:zion.kiwiamarshall@gmail.com' // <-- replace with your business email
                    + '?subject=' + subject + '&body=' + body;

      // notify
      showStatus('Opening email client... If nothing opens, copy/paste your message to email or WhatsApp.', false);

      // open mailto
      window.location.href = mailTo;
      return false;
    }

    function openWhatsAppQuick(){
      const waNumber = '254701900777'; // main number without leading zero
      const text = encodeURIComponent('Hello Holborn Movers, I would like a quote for a move. Please advise next steps.');
      const url = 'https://wa.me/' + waNumber + '?text=' + text;
      window.open(url, '_blank');
    }

    function showStatus(text, isError){
      const el = document.getElementById('form-status');
      el.style.color = isError ? '#b00020' : 'var(--muted)';
      el.textContent = text;
    }

    // Accessibility: keyboard shortcut "c" opens contact form
    document.addEventListener('keydown', (e) => {
      if(e.key === 'c' && !e.metaKey && !e.ctrlKey && !e.altKey){
        document.querySelector('[href="#contact"]').scrollIntoView({behavior:'smooth',block:'center'});
        const firstInput = document.getElementById('name');
        if(firstInput) firstInput.focus({preventScroll:true});
      }
    });
  </script>
